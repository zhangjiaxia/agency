.invite {
  margin: 30rpx 60rpx;
}
.invite .team {
    color: #666666;
    font-size: 34rpx;
}
.invite .switch {
    margin-left: 22rpx;
    width: 70rpx;
    height: 33rpx;
    border: 1px solid #fd5e2d;
    border-radius: 17rpx;
}
.invite .switch .switchtext {
      color: #FD5E2D;
      font-size: 20rpx;
}
.invite .code {
    color: #666666;
    font-size: 23rpx;
}
.invitepic {
  margin: 0 auto;
  width: 630rpx;
  height: 700rpx;
  background: #f3f3f3;
  border-radius: 20rpx;
}
.invitepic .pic {
    width: 100%;
    height: 558rpx;
    border-top-right-radius: 20rpx;
    border-top-left-radius: 20rpx;
}
.invitepic .invitetext {
    font-size: 29rpx;
    color: #343434;
    line-height: 1.2;
    margin-left: 21rpx;
    margin-right: 14rpx;
}
.invitebtn {
  margin-top: 82rpx;
  width: 630rpx;
  height: 90rpx;
  color: #FFFFFF;
  background: #fd5e2d;
  border-radius: 45rpx;
}

